<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorHeaderDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="ToolbarSubtitleAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="QualioFont">
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto"
           xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppCheckBoxRating" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingLeft">@dimen/sx</item>
        <item name="android:paddingRight">@dimen/sx</item>
        <item name="android:fontFamily">@font/timeburnerbold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/default_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/radio_bar_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/x_sx</item>
        <item name="android:layout_marginBottom">@dimen/x_sx</item>
        <item name="android:layout_marginRight">@dimen/x_sx</item>
        <item name="android:layout_marginLeft">@dimen/x_sx</item>
        <item name="android:textColor">@color/checkbox_color_selector</item>
    </style>

    <style name="AppRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingLeft">@dimen/md</item>
        <item name="android:paddingRight">@dimen/md</item>
        <item name="android:fontFamily">@font/timeburnerbold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/default_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/md</item>
        <item name="android:layout_marginRight">@dimen/md</item>
        <item name="android:textColor">@color/checkbox_color_selector</item>
    </style>

    <style name="AppText">
        <item name="android:backgroundTint">@color/colorGrayText</item>
        <item name="android:drawableTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/qualio</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTextSmall">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppEditText" parent="AppText">
        <item name="android:layout_width">300dp</item>
        <item name="android:fontFamily">@font/qualio</item>
    </style>

    <style name="AppIconSize">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AppIconButtonSize">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AppPrimaryButton">
        <item name="android:background">@drawable/button_round_corner</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">@dimen/primary_button_width</item>
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:fontFamily">@font/timeburnernormal</item>
        <item name="android:textSize">16dp</item>
    </style>



    <style name="AppPrimarySpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="colorControlNormal">@color/colorGrayText</item>
    </style>

    <style name="AppSecondarySpinner" parent="AppPrimarySpinner">
        <item name="android:layout_width">220dp</item>
    </style>

    <style name="AppActionBar">
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@drawable/toolbar_bottom_border</item>
    </style>

    <style name="AppActionBarTitle">
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorHeaderDark</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="AppActionBarSubtitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="AppCircleImageViewSmall">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="AppPrimaryRecyclerItemButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">82dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/default_border</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/timeburnernormal</item>
        <item name="android:textColor">@color/colorPrimary3</item>
    </style>

    <style name="AppFocusRecyclerItemButton" parent="AppPrimaryRecyclerItemButton">
        <item name="android:background">@drawable/default_border_focus</item>
        <item name="android:textColor">@color/colorFocus</item>
    </style>

    <style name="AppRatingBarNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">@android:integer/config_shortAnimTime</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:theme">@style/AppRatingBarTheme</item>
    </style>

    <style name="AppRatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:theme">@style/AppRatingBarTheme</item>
    </style>

    <style name="AppRatingBarTheme">
        <item name="android:colorControlNormal">@color/colorGrayText</item>
        <item name="android:colorControlActivated">@color/colorPrimary3</item>
    </style>
</resources>
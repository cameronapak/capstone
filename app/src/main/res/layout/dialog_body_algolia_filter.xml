<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:algolia="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <CheckBox
            android:text="@string/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_algolia_filter_rating" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/id_algolia_filter_distance"
    />
    <CheckBox
            android:text="@string/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_algolia_filter_distance" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/id_algolia_filter_rating"
            app:layout_constraintStart_toStartOf="@+id/id_algolia_filter_price_spinner"
    />
    <Spinner
            style="@style/AppSecondarySpinner"
            android:id="@+id/id_algolia_filter_price_spinner"
            app:layout_constraintTop_toBottomOf="@+id/id_algolia_filter_distance"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
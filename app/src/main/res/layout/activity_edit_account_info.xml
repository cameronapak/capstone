<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:civ="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_edit_account_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditAccountInfoActivity">
    <android.support.v7.widget.Toolbar
            style="@style/AppActionBar"
            app:titleTextAppearance="@style/AppActionBarTitle"
            app:subtitleTextAppearance="@style/AppActionBarSubtitle"
            android:id="@+id/id_edit_settings_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
            style="@style/AppCircleImageViewSmall"
            civ:civ_border_width="2dp"
            civ:civ_border_color="@color/colorPrimary"
            android:src="@drawable/ic_circle_profile"
            android:id="@+id/id_settings_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_edit_settings_toolbar"
            civ:layout_constraintStart_toStartOf="parent"
            civ:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"/>

    <TextView
            android:text="Update Profile Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_text_profile_photo"
            civ:layout_constraintTop_toBottomOf="@id/id_settings_profile_image"
            civ:layout_constraintStart_toStartOf="@id/id_settings_profile_image"
            civ:layout_constraintEnd_toEndOf="@id/id_settings_profile_image"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>
    <EditText
            style="@style/AppEditText"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/id_editEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Email"
            app:layout_constraintTop_toBottomOf="@+id/id_text_profile_photo"/>
    <android.support.design.widget.TextInputLayout
            style="@style/AppEditText"
            android:id="@+id/id_editPasswordLayout"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:hintAnimationEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/id_editEmail"
            app:layout_constraintStart_toStartOf="@id/id_editEmail"
            app:layout_constraintEnd_toEndOf="@id/id_editEmail">
        <android.support.design.widget.TextInputEditText
                style="@style/AppEditText"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:passwordToggleEnabled="true"
                android:id="@+id/id_editPassword"
                android:inputType="textPassword"
                android:hint="@string/hint_registration_password"/>
    </android.support.design.widget.TextInputLayout>
    <EditText
            style="@style/AppEditText"
            android:inputType="textPersonName"
            android:id="@+id/id_editFirstName"
            app:layout_constraintTop_toBottomOf="@+id/id_editPasswordLayout"
            app:layout_constraintStart_toStartOf="@id/id_editEmail"
            app:layout_constraintEnd_toEndOf="@id/id_editEmail" android:hint="First Name"/>
    <EditText
            style="@style/AppEditText"
            android:inputType="textPersonName"
            android:id="@+id/id_editLastName"
            app:layout_constraintTop_toBottomOf="@+id/id_editFirstName"
            app:layout_constraintStart_toStartOf="@id/id_editEmail"
            app:layout_constraintEnd_toEndOf="@id/id_editEmail"
            android:hint="Last Name"/>
    <EditText
            style="@style/AppEditText"
            android:inputType="phone"
            android:id="@+id/id_editPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/id_editLastName"
            app:layout_constraintStart_toStartOf="@id/id_editEmail"
            app:layout_constraintEnd_toEndOf="@id/id_editEmail"
            android:hint="Phone Number"/>
    <EditText
            style="@style/AppEditText"
            android:inputType="textPersonName"
            android:id="@+id/id_editStreet"
            app:layout_constraintTop_toBottomOf="@+id/id_editPhoneNumber"
            app:layout_constraintStart_toStartOf="@id/id_editEmail"
            app:layout_constraintEnd_toEndOf="@id/id_editEmail"
            android:hint="Street"/>
    <EditText
            style="@style/AppEditText"
            android:inputType="textPersonName"
            android:id="@+id/id_editCity"
            app:layout_constraintTop_toBottomOf="@+id/id_editStreet"
            app:layout_constraintStart_toStartOf="@id/id_editEmail"
            app:layout_constraintEnd_toEndOf="@id/id_editEmail"
            android:hint="City"/>

    <EditText
            style="@style/AppEditText"
            android:layout_width="72dp"
            android:inputType="number"
            android:id="@+id/id_editZipcode"
            android:hint="Zipcode"
            android:layout_height="0dp"
            civ:layout_constraintTop_toTopOf="@id/id_editStateSpinner"
            civ:layout_constraintBottom_toBottomOf="@id/id_editStateSpinner"
            civ:layout_constraintTop_toBottomOf="@id/id_editCity"
            civ:layout_constraintEnd_toEndOf="@id/id_editCity"/>
    <Spinner
            style="@style/AppSecondarySpinner"
            civ:layout_constraintTop_toBottomOf="@id/id_editCity"
            civ:layout_constraintStart_toStartOf="@id/id_editCity"
            android:id="@+id/id_editStateSpinner"/>
    <Button
            style="@style/AppPrimaryButton"
            android:text="Save Changes"
            android:layout_marginTop="32dp"
            civ:layout_constraintTop_toBottomOf="@id/id_editStateSpinner"
            civ:layout_constraintStart_toStartOf="@id/id_editEmail"
            civ:layout_constraintEnd_toEndOf="@id/id_editEmail"
            android:id="@+id/id_btn_update_profile"/>
</android.support.constraint.ConstraintLayout>

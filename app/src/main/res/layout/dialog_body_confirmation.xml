<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Are you sure?"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_confirmation_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/qualio_bold" android:textSize="24sp"
            android:textColor="@color/colorGrayTextDark" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_target_item" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_confirmation_text"
            app:layout_constraintStart_toStartOf="@+id/id_confirmation_text"
            app:layout_constraintEnd_toEndOf="@+id/id_confirmation_text" android:fontFamily="@font/qualio"
            android:textSize="24sp" android:textColor="@color/colorGrayText"/>
</android.support.constraint.ConstraintLayout>
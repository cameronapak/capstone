<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="60dp"
                android:clipToPadding="false">
    <de.hdodenhof.circleimageview.CircleImageView
            style="@style/AppCircleImageViewSmall"
            android:id="@+id/id_my_profile_image"
            android:layout_alignBottom="@id/message_body"
            android:src="@drawable/ic_circle_profile"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"
            android:layout_width="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_body"
            android:background="@drawable/message_primary_bubble"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_alignRight="@id/id_my_profile_image"
            android:textSize="18dp"
            android:text="Placeholder message"
            android:layout_marginRight="60dp"
            />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shared.Registration.ProfilePictureActivity">

    <TextView
            android:text="Upload Profile Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/id_uploadPictureText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:textStyle="bold"
            android:textAlignment="center"
    />


    <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/img_profilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/id_uploadPictureText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/id_temp_profile" android:cropToPadding="false"/>
    </com.theartofdev.edmodo.cropper.CropImageView>
    <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_uploadProfilePicture"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/relativeLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/img_registrationProfilePicture"
    />
    <TextView
            android:text="SKIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_skip"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_uploadProfilePicture" android:layout_marginTop="10dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center_horizontal" android:layout_height="wrap_content"
            android:id="@+id/relativeLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="496dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/bottom_bg1"
                android:id="@+id/registration_bottom_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="516dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.servicerating.ServiceRatingActivity" android:id="@+id/frameLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="411dp"
            android:background="@drawable/round_corner_bottom"
            android:elevation="5dp"
            android:fitsSystemWindows="true"
            android:layout_height="621dp" android:layout_gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp">

        <TextView
                android:layout_width="209dp"
                android:layout_height="24dp"
                android:fontFamily="@font/qualio_bold" android:textSize="24sp"
                android:id="@+id/id_rating_rate" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="148dp"
                android:layout_marginStart="100dp" android:text="@string/text_rating_initial"
                android:textAlignment="center"/>
        <RatingBar
                android:layout_width="244dp"
                android:layout_height="54dp" android:id="@+id/id_rating_bar"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="188dp"
                android:numStars="@android:integer/config_shortAnimTime"
                style="@style/Widget.AppCompat.RatingBar"/>
        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@drawable/toolbar_bottom_border"
                android:theme="?attr/actionBarTheme"
                android:minHeight="@dimen/toolbar_height"
                android:id="@+id/id_rating_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_rating_title" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/qualio_bold" android:textSize="28sp"
                android:textColor="@color/colorHeaderDark" android:text="@string/text_rating"/>
        <TextView
                android:text="@string/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_rating_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp" android:fontFamily="@font/qualio" android:layout_marginStart="36dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="209dp"
                android:layout_height="24dp"
                android:id="@+id/id_rating_how"
                android:fontFamily="@font/qualio_bold" android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="111dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="101dp"
                android:textColor="@color/colorPrimary3" android:textAlignment="center"/>
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal">

        <ImageView
                android:src="@drawable/bottom_bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_rating_imageView"
                app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="0dp"
                android:background="@drawable/bottom_bg2"
                android:contentDescription="bottom @string/bottom_sheet_behavior"
                android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    </RelativeLayout>

</FrameLayout>
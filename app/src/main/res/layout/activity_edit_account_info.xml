<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditAccountInfoActivity">
    <android.support.v7.widget.Toolbar
            style="@style/AppActionBar"
            app:titleTextAppearance="@style/AppActionBarTitle"
            app:subtitleTextAppearance="@style/AppActionBarSubtitle"
            android:id="@+id/id_edit_settings_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/id_editEmail"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Email"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_edit_settings_toolbar"/>

    <android.support.design.widget.TextInputLayout
            style="@style/AppEditText"
            android:id="@+id/id_editPasswordLayout"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:hintAnimationEnabled="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editEmail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
                style="@style/AppEditText"
                app:hintEnabled="false" app:hintAnimationEnabled="false"
                app:passwordToggleEnabled="true"
                android:id="@+id/id_editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/hint_registration_password"
                tools:layout_editor_absoluteY="244dp"
                tools:layout_editor_absoluteX="0dp"/>
    </android.support.design.widget.TextInputLayout>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_editFirstName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editPasswordLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="First Name"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_editLastName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editFirstName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Last Name"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/id_editPhoneNumber" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editLastName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Phone Number"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_editStreet" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editPhoneNumber" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Street"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_editCity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editStreet" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="City"/>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/id_editStateSpinner" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editCity" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"/>
    <EditText
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/id_editZipcode" android:hint="Zipcode" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editCity" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/id_editStateSpinner"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
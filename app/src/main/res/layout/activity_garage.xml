<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.garage.GarageActivity" android:id="@+id/id_frame_layout">

        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                app:titleTextAppearance="@style/ToolbarTitleAppearance"
                app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
                android:background="@drawable/toolbar_bottom_border"
                android:theme="?attr/actionBarTheme"
                android:minHeight="@dimen/toolbar_height"
                android:id="@+id/id_garage_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_add_primary3_24dp"
                android:id="@+id/id_add_vehicle"
                app:layout_constraintEnd_toEndOf="@+id/id_garage_toolbar" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/id_garage_toolbar"
                app:layout_constraintTop_toTopOf="@+id/id_garage_toolbar"
                app:layout_constraintVertical_bias="0.32" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>
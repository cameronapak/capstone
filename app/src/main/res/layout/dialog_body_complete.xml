<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="192dp">

    <TextView
            android:text="@string/confirm_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_confirm_desc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.855"
            android:textSize="12sp"/>
    <TextView
            android:text="@string/confirm_that"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_confirm_that" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_confirm_desc" app:layout_constraintVertical_bias="0.571"/>
</android.support.constraint.ConstraintLayout>
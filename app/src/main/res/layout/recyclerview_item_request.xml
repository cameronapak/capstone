<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/default_border"
                                             android:layout_marginTop="20dp"
                                             android:elevation="2dp"
                                             android:layout_height="141dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_client_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chan_profile_cropped"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>

    <TextView
            android:text="Mechanic Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_service_type"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/image_client_profile" android:textAlignment="viewStart"
            android:fontFamily="@font/roboto_bold" android:textColor="@color/colorGrayText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.294"/>
    <TextView
            android:text="Service"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:id="@+id/id_description"
            app:layout_constraintTop_toBottomOf="@+id/id_service_type"
            android:fontFamily="@font/roboto" android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/id_select"
            app:layout_constraintStart_toStartOf="@+id/id_service_type"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_client_name"
            app:layout_constraintTop_toBottomOf="@+id/image_client_profile"
            app:layout_constraintStart_toStartOf="@+id/image_client_profile"
            app:layout_constraintEnd_toEndOf="@+id/image_client_profile" android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorAccent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.774" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Post on Jan 24, 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_time_stamp"
            app:layout_constraintTop_toBottomOf="@+id/id_client_name"
            android:textSize="9sp"
            android:fontFamily="@font/roboto"
            android:textStyle="italic" app:layout_constraintEnd_toEndOf="@+id/id_client_name"
            app:layout_constraintStart_toStartOf="@+id/id_client_name"/>
    <Button
            android:text="@string/text_accept"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:textAllCaps="false"
            android:background="@drawable/default_border"
            android:id="@+id/id_primary_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/timeburnernormal"
            android:textColor="@color/colorPrimary3"
            android:elevation="0dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.921"/>
    <Button
            android:text="@string/text_more"
            android:layout_width="82dp"
            android:layout_height="37dp"
            android:textAllCaps="false"
            android:background="@drawable/default_border"
            android:id="@+id/id_secondary_btn"
            android:fontFamily="@font/timeburnernormal"
            android:textColor="@color/colorPrimary3"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintEnd_toStartOf="@+id/id_primary_btn"
            app:layout_constraintTop_toTopOf="@+id/id_primary_btn" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="id_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_price" app:layout_constraintEnd_toEndOf="@+id/id_select"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="10sp" android:fontFamily="@font/roboto"/>
    <TextView
            android:text="id_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_distance"
            android:textSize="10sp" android:fontFamily="@font/roboto"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_directions_car_black_24dp"
            android:id="@+id/id_directions_btn"
            android:background="@drawable/ic_directions_car_black_24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_distance" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
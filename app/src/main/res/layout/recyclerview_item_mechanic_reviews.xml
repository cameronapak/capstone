<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="373dp"
                                             android:layout_height="107dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="373dp"
            android:layout_height="107dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:id="@+id/id_recyclerview_reviews"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:background="@color/stpi_default_text_color"
                android:layout_width="262dp"
                android:layout_height="1dp" android:id="@+id/id_recyclerview_mechanic_reviews_divider"
                app:layout_constraintTop_toBottomOf="@+id/id_recyclerview_mechanic_reviews_postedOn"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/id_recyclerview_mechanic_reviews_name"
                android:layout_marginStart="40dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:id="@+id/id_recyclerview_mechanic_reviews_postedOn"
                app:layout_constraintStart_toEndOf="@+id/id_recyclerview_mechanic_reviews_name"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/roboto_light" android:textStyle="italic" android:textSize="9sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/id_recyclerview_mechanic_reviews_description"/>
        <de.hdodenhof.circleimageview.CircleImageView
                style="@style/AppCircleImageViewSmall"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary3"
                android:src="@drawable/chan_profile_cropped"
                android:id="@+id/id_recyclerview_mechanic_reviews_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_recyclerview_mechanic_reviews_name"
                app:layout_constraintTop_toBottomOf="@+id/id_recyclerview_mechanic_reviews_image"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                android:layout_marginTop="15dp" android:fontFamily="@font/roboto" android:textSize="10sp"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="174dp"
                android:layout_height="46dp"
                android:id="@+id/id_recyclerview_mechanic_reviews_description"
                app:layout_constraintStart_toEndOf="@+id/id_recyclerview_mechanic_reviews_image"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="10sp"
                android:fontFamily="@font/roboto"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary"
>
    <EditText
            android:layout_width="88dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="0.0"
            android:ems="10"
            android:id="@+id/id_tips" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/label_tip" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="4242424242424242"
            android:ems="10"
            android:id="@+id/id_card_nums" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/id_tips" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="88dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="123"
            android:ems="10"
            android:id="@+id/id_cvc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_card_nums" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.058"/>
    <EditText
            android:layout_width="96dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:text="122020"
            android:ems="10"
            android:id="@+id/id_expire_date"
            app:layout_constraintStart_toEndOf="@+id/id_card_nums" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/id_tips" app:layout_constraintHorizontal_bias="0.448"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_tip" android:text="@string/label_tip" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAllCaps="false" android:textColor="@color/colorPrimary1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_cardnumbers" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_tips" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/id_card_nums" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:text="@string/label_cardnumbers"
            android:textAllCaps="false" android:textColor="@color/colorPrimary1"/>
    <TextView
            android:text="@string/label_expire"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/label_expire" app:layout_constraintStart_toEndOf="@+id/label_cardnumbers"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/label_cardnumbers"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/id_expire_date" app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintVertical_bias="0.0"
            android:textAllCaps="false" android:textColor="@color/colorPrimary1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_CVC" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_card_nums" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/id_cvc" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:text="@string/label_cvc"
            android:textAllCaps="false" android:textColor="@color/colorPrimary1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_sumbit_payment_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_cvc" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.173" android:text="@string/id_submit_payment_btn"/>
</android.support.constraint.ConstraintLayout>
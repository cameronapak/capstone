<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorHeaderDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="ToolbarSubtitleAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorPrimary1</item>
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="QualioFont">
        <item name="android:fontFamily">@font/qualio_font_family</item>
    </style>

    <style name="ThemeSpinner">
        <item name="android:colorAccent">@color/colorGrayText</item>
        <item name="android:colorControlNormal">@color/colorGrayText</item>
        <item name="android:textColor">@color/colorPrimary1</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textSize">14dp</item>
    </style>

</resources>

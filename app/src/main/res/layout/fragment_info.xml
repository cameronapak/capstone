<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".shared.registration.fragments.InfoFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                style="@style/AppEditText"
                android:inputType="textPersonName"
                android:id="@+id/id_registrationFirstName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="First Name" android:layout_marginTop="100dp"/>
        <EditText
                style="@style/AppEditText"
                android:inputType="textPersonName"
                android:id="@+id/id_registrationLastName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_registrationFirstName"
                android:hint="Last Name" android:layout_marginTop="8dp"/>
        <EditText
                style="@style/AppEditText"
                android:inputType="phone"
                android:id="@+id/id_registrationPhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/id_registrationLastName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Phone Number" android:layout_marginTop="8dp"/>
        <Button
                style="@style/AppPrimaryButton"
                android:text="Next"
                android:id="@+id/btn_profilePicture"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="340dp" app:layout_constraintHorizontal_bias="0.497"/>
        <TextView
                style="@style/AppTextSmall"
                android:text="Back"
                android:id="@+id/btn_backToCredentials"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_profilePicture"
                app:layout_constraintStart_toStartOf="@+id/btn_profilePicture"
                app:layout_constraintEnd_toEndOf="@+id/btn_profilePicture"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
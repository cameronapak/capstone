<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".shared.Registration.fragments.AddressInfoFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/id_registrationStreet" android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:hint="Street"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/id_registrationCity" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/id_registrationStreet" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:hint="City"/>
        <Spinner
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:id="@+id/id_registrationStateSpinner" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/id_registrationCity"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"/>
        <EditText
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/id_registrationZip" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/id_registrationCity" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/id_registrationStateSpinner" android:layout_marginStart="8dp"
                android:hint="Zipcode" app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_registerAccount" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/id_registrationStateSpinner"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_backToUploadProfilePicture" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_registerAccount"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp" android:layout_marginEnd="12dp" android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" app:cardCornerRadius="10dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="16dp">

            <TextView
                    android:layout_width="271dp"
                    android:layout_height="wrap_content" android:id="@+id/label_service_type" android:textSize="20sp"
                    android:textStyle="bold" android:layout_marginTop="6dp"
                    android:layout_below="@+id/image_client_profile" android:layout_alignParentStart="true"
                    android:layout_marginStart="11dp"/>
            <TextView
                    android:layout_width="292dp"
                    android:layout_height="86dp" android:id="@+id/label_service_description"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/label_service_type" android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"/>
            <TextView
                    android:layout_width="62dp"
                    android:layout_height="29dp" android:id="@+id/label_cost_service"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/id_button_remove"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp" android:layout_toStartOf="@+id/id_button_update"
                    android:layout_marginEnd="9dp" android:text="@string/label_remove_service"/>
            <Button
                    android:text="@string/label_update_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/id_button_update"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1dp"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
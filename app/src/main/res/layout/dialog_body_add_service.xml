<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/label_price"
            android:inputType="number|numberDecimal" android:hint="@string/label_Price"
            app:layout_constraintStart_toStartOf="@+id/add_service_spinner"
            app:layout_constraintEnd_toEndOf="@+id/add_service_spinner"
            app:layout_constraintTop_toBottomOf="@+id/add_service_spinner"
            android:layout_marginTop="4dp" android:fontFamily="@font/qualio" android:textSize="24sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/label_comment"
            app:layout_constraintTop_toBottomOf="@+id/label_price"
            app:layout_constraintStart_toStartOf="@+id/label_price"
            app:layout_constraintEnd_toEndOf="@+id/label_price" android:hint="@string/label_comment_add_serivce"
            android:fontFamily="@font/qualio" android:textSize="24sp"/>
    <Spinner
            android:layout_width="268dp"
            android:layout_height="42dp"
            android:id="@+id/add_service_spinner"
            android:layout_marginTop="16dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:focusable="auto"
            android:spinnerMode="dropdown"/>
</android.support.constraint.ConstraintLayout>
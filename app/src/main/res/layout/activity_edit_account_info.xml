<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:civ="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditAccountInfoActivity">

    <android.support.v7.widget.Toolbar
            style="@style/AppActionBar"
            app:titleTextAppearance="@style/AppActionBarTitle"
            app:subtitleTextAppearance="@style/AppActionBarSubtitle"
            android:id="@+id/id_edit_settings_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">
    </com.theartofdev.edmodo.cropper.CropImageView>

    <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            civ:layout_constraintTop_toBottomOf="@+id/id_edit_settings_toolbar"
            civ:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/linearLayout3" android:paddingEnd="24dp" android:paddingStart="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/AppCircleImageViewSmall"
                    civ:civ_border_width="2dp"
                    civ:civ_border_color="@color/colorPrimary"
                    android:src="@drawable/ic_circle_profile"
                    android:id="@+id/id_settings_profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_edit_settings_toolbar"
                    android:layout_gravity="center"/>

            <TextView
                    android:text="Update Profile Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/id_text_profile_photo"
                    android:layout_marginTop="4dp" android:layout_gravity="center" android:layout_marginBottom="16dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/id_editEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="Email"
                    app:layout_constraintTop_toBottomOf="@+id/id_edit_settings_toolbar"/>
            <android.support.design.widget.TextInputLayout
                    style="@style/AppEditText"
                    android:id="@+id/id_editPasswordLayout"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/id_editEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputEditText
                        style="@style/AppEditText"
                        app:hintEnabled="false" app:hintAnimationEnabled="false"
                        app:passwordToggleEnabled="true"
                        android:id="@+id/id_editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="@string/hint_registration_password"
                        tools:layout_editor_absoluteY="244dp"
                        tools:layout_editor_absoluteX="0dp"/>
            </android.support.design.widget.TextInputLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/id_editFirstName" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_editPasswordLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="First Name"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/id_editLastName" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_editFirstName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="Last Name"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/id_editPhoneNumber" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_editLastName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="Phone Number"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/id_editStreet" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_editPhoneNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="Street"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/id_editCity" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_editStreet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="City"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:weightSum="2"
                    android:layout_marginTop="8dp"
                    android:id="@+id/linearLayout2" app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:layout_weight="1"
                        android:id="@+id/id_editZipcode"
                        android:hint="Zipcode"
                        tools:layout_editor_absoluteY="527dp"
                        tools:layout_editor_absoluteX="140dp"/>
                <Spinner
                        style="@style/AppSecondarySpinner"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:id="@+id/id_editStateSpinner"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="561dp"/>
            </LinearLayout>
            <Button
                    style="@style/AppPrimaryButton"
                    android:text="Save Changes"
                    app:layout_constraintHorizontal_bias="0.507"
                    android:id="@+id/id_btn_update_profile"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shared.ForgotPasswordActivity">

    <EditText
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_pwd_email" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Enter Email"/>
    <Button
            android:text="Cancel"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_pwd_cancel" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/id_pwd_email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"/>
    <Button
            android:text="Reset"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_pwd_reset"
            app:layout_constraintStart_toEndOf="@+id/id_pwd_cancel" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.612" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/id_pwd_email"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.garage.AddVechicleInfo">

    <Spinner
            android:layout_width="395dp"
            android:layout_height="0dp"
            android:id="@+id/id_add_year" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_add_make" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/id_add_year" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:layout_width="395dp"
            android:layout_height="0dp"
            android:id="@+id/id_add_model" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/id_add_make" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:layout_width="187dp"
            android:layout_height="55dp"
            android:id="@+id/id_cancel_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/id_add_button" android:layout_marginEnd="28dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/id_add_model"
            app:layout_constraintHorizontal_bias="0.0" android:text="@string/cancel_button"/>
    <Button
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_add_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/id_add_model"
            android:text="@string/add_button"/>
</android.support.constraint.ConstraintLayout>
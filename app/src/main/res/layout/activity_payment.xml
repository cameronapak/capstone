<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.payment.Payment"
        android:background="@drawable/bg_more">

    <android.support.v7.widget.Toolbar
            style="@style/AppActionBar"
            app:titleTextAppearance="@style/AppActionBarTitle"
            app:subtitleTextAppearance="@style/AppActionBarSubtitle"
            android:id="@+id/id_payment_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <include layout="@layout/payment_container"
             android:layout_width="347dp"
             android:layout_height="534dp"
             android:layout_gravity="center"
             android:layout_centerHorizontal="true"
             android:id="@+id/id_payment_container_card"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/id_payment_toolbar" android:layout_marginBottom="8dp"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
             app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.384"></include>

</android.support.constraint.ConstraintLayout>
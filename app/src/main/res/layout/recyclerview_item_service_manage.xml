<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/default_border"
                                             android:layout_marginTop="20dp"
                                             android:layout_height="141dp">

    <TextView
            android:text="Mechanic Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_service_type"
            android:layout_marginStart="16dp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/roboto_bold" android:textColor="@color/colorGrayText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.028" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Service"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:id="@+id/id_description"
            app:layout_constraintTop_toBottomOf="@+id/id_service_type"
            android:fontFamily="@font/roboto" android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/id_button_update"
            app:layout_constraintStart_toStartOf="@+id/id_service_type"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="@string/text_remove"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:textAllCaps="false"
            android:background="@drawable/default_border_focus"
            android:id="@+id/id_button_remove"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/timeburnernormal"
            android:textColor="@color/colorFocus"
            android:elevation="0dp" app:layout_constraintEnd_toStartOf="@+id/id_button_update"
            app:layout_constraintTop_toTopOf="@+id/id_button_update"/>

    <Button
            android:text="@string/text_update"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:textAllCaps="false"
            android:background="@drawable/default_border"
            android:id="@+id/id_button_update"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/timeburnernormal"
            android:textColor="@color/colorPrimary3"
            android:elevation="0dp"/>
    <TextView
            android:text="id_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_price" app:layout_constraintEnd_toEndOf="@+id/id_button_update"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="10sp" android:fontFamily="@font/roboto"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:algolia="http://schemas.android.com/apk/res-auto" layout_width="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:background="@drawable/default_border"
                                                 android:layout_marginTop="20dp"
                                                 android:elevation="2dp"
                                                 android:layout_height="130dp" android:id="@+id/id_algolia_hit_item">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/id_profile_image" android:layout_marginTop="18dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="36dp"/>
        <TextView
                android:text="Mechanic Service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_service_type"
                app:layout_constraintStart_toEndOf="@+id/id_profile_image"
                android:layout_marginStart="36dp"
                app:layout_constraintTop_toTopOf="@+id/id_profile_image"
                android:textAlignment="viewStart"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorGrayText"
                algolia:attribute='@{"service.serviceType"}'
                algolia:highlighted='@{true}'/>
        <TextView
                android:text="Service"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:id="@+id/id_description"
                app:layout_constraintTop_toBottomOf="@+id/id_service_type"
                app:layout_constraintStart_toStartOf="@+id/id_service_type"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/id_select"
                algolia:attribute='@{"service.description"}'
                algolia:highlighted='@{true}'/>
        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_client_name"
                app:layout_constraintTop_toBottomOf="@+id/id_profile_image"
                app:layout_constraintStart_toStartOf="@+id/id_profile_image"
                app:layout_constraintEnd_toEndOf="@+id/id_profile_image" android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorAccent"/>
        <TextView
                android:text="stars_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_mechanic_rating"
                app:layout_constraintTop_toBottomOf="@+id/id_client_name"
                app:layout_constraintStart_toStartOf="@+id/id_client_name"
                app:layout_constraintEnd_toEndOf="@+id/id_client_name" android:textSize="8sp"
                algolia:attribute='@{"mechanicInfo.rating"}'/>
        <Button
                android:text="@string/text_select"
                android:layout_width="82dp"
                android:layout_height="36dp"
                android:textAllCaps="false"
                android:background="@drawable/default_border"
                android:id="@+id/id_select"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/timeburnernormal"
                android:textColor="@color/colorPrimary3"
                style="?android:attr/borderlessButtonStyle"/>
        <TextView
                android:text="id_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_price"
                app:layout_constraintEnd_toEndOf="@+id/id_select"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".shared.SignInActivity" android:layout_width="match_parent">

    <EditText
            android:layout_width="351dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_login_email"
            android:hint="Enter Email" android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="64dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/id_login_password" android:hint="Enter Password" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/id_login_email" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Login"
            android:layout_width="204dp"
            android:layout_height="68dp"
            android:id="@+id/id_login_button" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/id_login_password" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.45"/>
    <TextView
            android:text="Forgot Password?"
            android:layout_width="241dp"
            android:layout_height="32dp"
            android:id="@+id/id_forgot_password" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/id_login_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.402"/>
</android.support.constraint.ConstraintLayout>
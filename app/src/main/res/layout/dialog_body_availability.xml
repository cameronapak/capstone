<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/id_availability_view">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/linearLayout">

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_monday">
            <TextView
                    android:text="Mon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_mon" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mon_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_tuesday">
            <TextView
                    android:text="Tues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_tues" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_tues_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_wednesday">
            <TextView
                    android:text="Wed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_wed" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_wed_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_thursday">
            <TextView
                    android:text="Thur"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_thur" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_thur_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_friday">
            <TextView
                    android:text="Fri"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_fri" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_fri_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_saturday">
            <TextView
                    android:text="Sat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_sat" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_sat_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/id_sunday">
            <TextView
                    android:text="Sun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_sun" android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id_sun_checkbox"
                    android:theme="@style/CheckBoxStyle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_textFromTime"
                    tools:layout_editor_absoluteY="156dp" tools:layout_editor_absoluteX="16dp"
            />
            <Button
                    android:text="Set Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/id_btnFromTime" android:layout_weight="1"
                    style="@android:style/Widget.Material.Light.Button.Borderless"
                    android:onClick="clickTimePicker"
                    android:textAllCaps="false" android:textColor="@color/colorPrimary1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_textToTime"
                    app:layout_constraintEnd_toStartOf="@+id/id_toTime"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginLeft="16dp"/>
            <Button
                    android:text="Set Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/id_btnToTime" android:layout_weight="1"
                    style="@android:style/Widget.Material.Light.Button.Borderless"
                    android:onClick="clickTimePicker"
                    android:textAllCaps="false" android:textColor="@color/colorPrimary1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>